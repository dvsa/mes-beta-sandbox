{
  "compilerOptions": {
    "outDir": "./build",
    "allowJs": false,
    "target": "es5",
    "lib": [
      "esnext",
      "dom"
    ],
    "types": [ "jest", "node" ],
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "build",
    "node_modules",
    "src/**/*.spec.ts",
  ],
  "compileOnSave": false,
  "atom": {
    "rewriteTsconfig": false
  }
}